*{padding: 0;margin: 0;}
html,body,.wrapper{width: 100%;height: 100%;}
.wrapper{
	background: #F4F7FA ;
}
.header{
	height: .96rem;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 .3rem ;
	background: #FFFFFF ;
}
.header-aside{
	display: flex;
	align-items: center;
	justify-content: center;
	width: .3rem;
}
.header-aside img{
	height: .36rem;
}
.header-text{
	font-size: .36rem;
	color: #232323 ;
}
.main{
	
}
.main-one{
	display: flex;
	align-items: center;
	justify-content: space-around;
	height: .8rem;
	background: #FFFFFF;
	margin-bottom: .2rem;
	height: calc(100% - .8rem);
	overflow-x: hidden;
	overflow-y: scroll;
}
.one-text{
	font-size: .28rem;
	color: #2B2B2B ;
}
.one-news{
	height: .8rem;
	font-size: .28rem;
	color: #F55353  ;
	border-bottom: 2px solid #F55353;
	text-align: center;
	line-height: .8rem;
}
.main-two{
	height: 4.2rem;
	background: #FFFFFF;
	padding: 0 .3rem;
}
.two-top{
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: .8rem;
}
.top-text{
	font-size: .28rem;
	color: #9B9B9B ;
}
.top-news{
	font-size: .28rem;
	color: #2B2B2B ;
}
.two-content{
	display: flex;
	align-items: center;
	justify-content: flex-start;
}
.content-lift{
	height: 2rem;
	width: 2rem;
	overflow: hidden;
	margin-right: .34rem;
}
.content-lift img{
	width: 100%;
}
.content-text{
	font-size: .28rem;
	color: #232323 ;
	height: .8rem;
	line-height: .4rem;
	overflow: hidden;
}
.two-zi{
	font-size: .28rem;
	color: #2B2B2B ;
	margin-top: .2rem;
}
.two-bottom{
	display: flex;
	align-items: center;
	justify-content: flex-end;
}
.bottom-text{
	font-size: .28rem;
	color: #9B9B9B ;
	height: .5rem;
	width: 1.5rem;
	text-align: center;
	line-height: .5rem;
	border: 1px solid #9B9B9B ;
	border-radius: .26rem;
	margin-right: .2rem;
}
.bottom-news{
	font-size: .28rem;
	color: #F55353 ;
	height: .5rem;
	width: 1.5rem;
	text-align: center;
	line-height: .5rem;
	border: 1px solid #F55353 ;
	border-radius: .26rem;
}





